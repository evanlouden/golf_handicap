<div class="overflow-hidden p-4 text-center">
  <% @users.each do |user| %>
    <%= link_to user_path(user), class: "no-underline" do %>
      <div class='<%= "bg-orange-500 text-white text-5xl no-underline font-bold py-2 px-4 mx-4 my-8 border border-gray-400 rounded" %>'>
        <%= user.name %>
      </div>
    <% end %>
  <% end %>
</div>
