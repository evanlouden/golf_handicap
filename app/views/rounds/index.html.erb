<div class="flex flex-col m-4 border border-gray-200 rounded-lg shadow-md">
  <div class="py-2 -my-2 overflow-x-auto sm:-mx-6 sm:px-6 lg:-mx-8 lg:px-8">
    <div class="flex justify-between min-w-full overflow-hidden bg-white rounded-lg">
      <div class="py-3 pl-4 text-xl"><%= @user.name %></div>
      <div class="py-3 pr-4 text-xl text-right"><%= @user.handicap %></div>
    </div>
  </div>
</div>

<div class="flex flex-col m-4 border border-gray-300 rounded-lg shadow-md ">
  <div class="py-2 -my-2 overflow-x-auto sm:-mx-6 sm:px-6 lg:-mx-8 lg:px-8">
    <div class="inline-block min-w-full overflow-hidden align-middle rounded-lg">
      <table class="min-w-full">
        <tbody class="bg-white">
          <% @user.rounds.each do |round| %>
            <% round_presenter = RoundPresenter.new(round) %>
            <tr>
              <td class="pt-4 pb-2 pl-4 whitespace-no-wrap border-b border-gray-200 lg:py-6">
                <div class="mb-2 text-lg leading-5 text-gray-900">
                  <%= round.course.name %>
                </div>
                <div class="text-xs italic leading-5 text-gray-800">
                  <%= round.date.strftime("%b %e, %Y") %>
                </div>
              </td>
              <td class="pt-4 pb-2 pr-4 text-center whitespace-no-wrap border-b border-gray-200 lg:py-6">
                <div class="mb-2 text-lg leading-5 text-right text-gray-900">
                  <%= round.score %>
                </div>
                <div class="text-xs italic leading-5 text-right text-gray-800">
                  <%= round_presenter.round_differential %>
                </div>
              </td>
            </tr>
            <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<div class="fixed bottom-0 flex justify-around w-full h-12 bg-gray-700">
  <%= link_to new_user_round_path(@user) do %>
    <%= embedded_svg "../svgs/add-circle.svg", class: "h-20 w-20 flex -mt-10", stroke: "#FFFFFF", fill: "#ed8936" %>
  <% end %>
</div>

